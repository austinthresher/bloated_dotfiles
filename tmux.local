PL_ARROW_R1="\ue0b0"
PL_ARROW_R2="\ue0b1"
PL_ARROW_L1="\ue0b2"
PL_ARROW_L2="\ue0b3"
PL_TRIUP_R1="\ue0b8"
PL_TRIUP_R2="\ue0b9"
PL_TRIUP_L1="\ue0ba"
PL_TRIUP_L2="\ue0bb"
PL_TRIDN_R1="\ue0bc"
PL_TRIDN_R2="\ue0bd"
PL_TRIDN_L1="\ue0be"
PL_TRIDN_L2="\ue0bf"

